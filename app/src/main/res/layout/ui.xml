<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        fontPath="@string/sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="@string/personalize"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?attr/BackgroundTint"
        tools:ignore="MissingPrefix" />

    <LinearLayout
        android:id="@+id/album_grid"
        android:background="#05FF006F"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:backgroundTint="#26FF006F"
                android:background="@drawable/abs_history_playlist"
                android:src="@drawable/ic_album_white_24dp"
                app:tint="#FF006F"
                tools:ignore="ObsoleteLayoutParam" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:text="@string/album_grid"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/BackgroundTint" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>