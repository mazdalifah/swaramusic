<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <thiva.tamilaudiopro.views.WidthFitSquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <thiva.tamilaudiopro.views.CircularImageView
            android:id="@+id/imageView_latest_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:civ_border_color="?BackgroundColor_S"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_keyboard_arrow_up_24dp2"/>
    </thiva.tamilaudiopro.views.WidthFitSquareLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_latest_list"
        fontPath="@string/sans_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="@string/app_name"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="?attr/BackgroundTint"/>


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        tools:ignore="ObsoleteLayoutParam" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:layout_centerInParent="true"
        tools:ignore="ObsoleteLayoutParam"
        android:contentDescription="@string/todo" />

</LinearLayout>