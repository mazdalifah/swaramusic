<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="7dp"
    android:layout_marginStart="7dp">

    <thiva.tamilaudiopro.views.WidthFitSquareLayout
        android:id="@+id/cv_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <thiva.tamilaudiopro.views.CircularImageView
            android:id="@+id/iv_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:civ_border_color="?BackgroundColor_S"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_keyboard_arrow_up_24dp2"/>
    </thiva.tamilaudiopro.views.WidthFitSquareLayout>


    <TextView
        android:id="@+id/tv_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:minLines="2"
        android:maxLines="2"
        android:paddingTop="7dp"
        android:textSize="14sp"
        android:textColor="?attr/BackgroundTint"
        android:text="@string/app_name"
        android:lineSpacingMultiplier="0.9"/>

</LinearLayout>